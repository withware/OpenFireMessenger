<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/listview_gradient_two"
                android:orientation="horizontal">

    <ImageView
            android:id="@+id/ivChatSendEnabled"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/etChatMessage"
            android:src="@drawable/ic_send_disabled"/>

    <ImageView
            android:id="@+id/ivChatSendDisabled"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/etChatMessage"
            android:src="@drawable/ic_send_enabled"/>

    <EditText
            android:id="@+id/etChatMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ivChatSendEnabled"
            android:background="@drawable/edittext_rect"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#0f0f0f"
            android:textCursorDrawable="@null"/>

</RelativeLayout>